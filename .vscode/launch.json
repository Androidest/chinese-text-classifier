{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: distill.py",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            // 指定要运行的 Python 文件的绝对路径或相对于工作区的路径
            "program": "${workspaceFolder}/distill.py", 
            // 传递给 Python 脚本的参数
            "args": ["--model=albert_dist"], 
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: distill.py --redistill",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            // 指定要运行的 Python 文件的绝对路径或相对于工作区的路径
            "program": "${workspaceFolder}/distill.py", 
            // 传递给 Python 脚本的参数
            "args": ["--model=albert_dist", "--redistill"], 
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: train.py",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            // 指定要运行的 Python 文件的绝对路径或相对于工作区的路径
            "program": "${workspaceFolder}/train.py", 
            // 传递给 Python 脚本的参数
            "args": ["--model=bert"], 
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: test.py",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            // 指定要运行的 Python 文件的绝对路径或相对于工作区的路径
            "program": "${workspaceFolder}/test.py", 
            // 传递给 Python 脚本的参数
            "args": ["--model=bert"], 
            "console": "integratedTerminal"
        }
    ]
}